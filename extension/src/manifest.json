{
  "manifest_version": 3,
  "name": "LinkedIn AI Reply Extension",
  "version": "1.0",
  "description": "A Chrome extension that assists users in generating replies to messages on LinkedIn.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": ["../src/contentScripts/contenScripts.ts"],
      "css": ["../src/styles/contentstyles.css"]
    }
  ],
  "icons": {
    "16": "./assets/icon16.png",
    "48": "./assets/icon48.png",
    "128": "./assets/icon128.png"
  },
  "action": {
    "default_popup": "../popup/popup.html",
    "default_icon": "./assets/icon128.png"
  },
  "background": {
    "service_worker": "../src/background/background.ts"
  }
}
